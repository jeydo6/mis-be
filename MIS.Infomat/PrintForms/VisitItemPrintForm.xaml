<UserControl x:Class="MIS.Infomat.PrintForms.VisitItemPrintForm"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:gl="clr-namespace:System.Globalization;assembly=mscorlib"
			 mc:Ignorable="d" 
			 d:DesignHeight="480" d:DesignWidth="360">
	<Viewbox>
		<StackPanel Margin="25, 10">
            <TextBlock Text="{Binding OrganizationName}" FontSize="14" FontFamily="Georgia" TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" />
			<TextBlock Text="Запись на приём" FontSize="14" FontFamily="Georgia" FontWeight="Bold" TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" />
			<TextBlock FontSize="14" FontFamily="Georgia" TextAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center">
				<Run Text="Дата: " />
				<Run FontWeight="Bold" Text="{Binding VisitItem.BeginDateTime, StringFormat={}{0:dd MMMM yyyy г.}, ConverterCulture={x:Static gl:CultureInfo.CurrentCulture}}" />
				<LineBreak />
				<Run Text="Время: " />
				<Run FontWeight="Bold" Text="{Binding VisitItem.BeginDateTime, StringFormat={}{0:H:mm}}" />
			</TextBlock>
			<TextBlock Text="Пациент: " FontSize="14" FontFamily="Georgia" TextAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" />
			<TextBlock Text="{Binding VisitItem.PatientCode}" FontSize="14" FontFamily="Georgia" FontWeight="Bold" TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" />
			<TextBlock Text="{Binding VisitItem.PatientName}" FontSize="14" FontFamily="Georgia" FontWeight="Bold" TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" />
			<TextBlock Text="Врач:" FontSize="14" FontFamily="Georgia" TextAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" />
			<TextBlock Text="{Binding VisitItem.ResourceName}" FontSize="14" FontFamily="Georgia" FontWeight="Bold" TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" />
			<TextBlock Text="{Binding VisitItem.EmployeeName}" FontSize="14" FontFamily="Georgia" FontWeight="Bold" TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" />
			<TextBlock FontSize="14" FontFamily="Georgia" TextAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center">
				<Run Text="Кабинет: " />
				<Run FontWeight="Bold" Text="{Binding VisitItem.RoomCode}" />
				<LineBreak />
				<Run Text="Этаж: " />
				<Run FontWeight="Bold" Text="{Binding VisitItem.RoomFlat}" />
			</TextBlock>
			<TextBlock Text="Пожалуйста, не опаздывайте!" FontSize="12" FontFamily="Georgia" TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" />
		</StackPanel>
	</Viewbox>
</UserControl>
